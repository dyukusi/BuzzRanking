<!DOCTYPE html>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
      integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
<link href="/css/common.css" rel="stylesheet">
<link href="/css/sitemap.css" rel="stylesheet">

<html>
<head>
    <%- include(appRoot + '/views/google_analytics.ejs') %>

    <title>サイトマップ【BuzzRanking】</title>
    <meta name="viewport"
          content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta name=”description”
          content=”今ネットでバズっている本や漫画、小説、ゲームなどの商品や、宿泊・旅行予約などのWebサービスを話題性の高い順に毎日ランキング形式で紹介するBuzzRankingのサイトマップ”>

</head>
<body>

<%- include(appRoot + '/views/header.ejs') %>


<div id="content" class="container-fluid pt-3">
    <section class="section">
        <h2 class="parent">ランキング</h2>

        <div class="row">
            <div class="col-12">
                <ul class="sitemap_list">
                    <%
                    __.each(Const.PRODUCT_TYPE_BUNDLE_NAME_TO_ID, (productTypeBundleId, productTypeBundleName) => {
                        var productTypeBundleJapaneseName = Const.PRODUCT_TYPE_BUNDLE_ID_TO_JA_NAME_HASH[productTypeBundleId];
                        var belongedProductTypeIds = Const.PRODUCT_TYPE_BUNDLE_ID_TO_PRODUCT_TYPE_IDS[productTypeBundleId];
                    %>
                    <li>
                        <a href="/ranking/<%= productTypeBundleName %>">
                            <%= productTypeBundleJapaneseName %>
                        </a>
                        <% if (!__.isEmpty(belongedProductTypeIds) && productTypeBundleName != 'all') { %>
                            <ul class="sitemap_list">
                                <%
                                __.each(belongedProductTypeIds, productTypeId => {
                                    var productTypeName = Const.PRODUCT_TYPE_ID_TO_NAME_HASH[productTypeId];
                                    var productTypeJapaneseName = Const.PRODUCT_TYPE_ID_TO_JA_NAME_HASH[productTypeId];
                                %>
                                    <li>
                                        <a href="/ranking/<%= productTypeBundleName %>?type=<%= productTypeName %>">
                                            <%= productTypeJapaneseName %>
                                        </a>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </section>

    <section>
        <h2 class="parent">商品・サービス</h2>
        <div class="row">
            <div class="col-12">
                <ul class="sitemap_list">
                    <li><a href="/product/list">商品・サービス一覧</a></li>
                </ul>
            </div>
        </div>
    </section>

    <section>
        <h2 class="parent">その他</h2>
        <div class="row">
            <div class="col-12">
                <ul class="sitemap_list">
                    <li><a href="#footer">BuzzRankingとは？</a></li>
                    <li><a href="#footer">運営者情報</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#desc-modal">FAQ</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#desc-modal">プライバシーポリシー</a></li>
                </ul>
            </div>
        </div>
    </section>
</div>

<%- include(appRoot + '/views/footer.ejs') %>

</body>
</html>

<script src="/js/compressed/index.min.js" type="text/javascript"></script>
