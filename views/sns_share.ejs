<%
const sprintf = require('sprintf-js').sprintf;

// arguments
var shareTargetName;
var shareURL;
var shareText;
var mainShareButtonSuffix;

var twitterShareURL = encodeURI(sprintf("https://twitter.com/intent/tweet?url=%s&text=%s", shareURL, shareText));
var facebookShareURL = encodeURI(sprintf("https://www.facebook.com/sharer.php?src=bm&u=%s&t=%s", shareURL, shareText));
var pocketBookmarkURL = encodeURI(sprintf("//getpocket.com/edit?url=%s&title=%s", shareURL, shareText));
var hatenaBookmarkURL = encodeURI(sprintf("//b.hatena.ne.jp/add?mode=confirm&url=%s", shareURL));
%>

<div class="row pt-3">
    <div class="col-12">
        <a href='<%= twitterShareURL %>' target="blank_" class="share-button-base share-button-twitter">
            <i class="fab fa-twitter"></i>
            <span>
                <%= shareTargetName %>
                <span class="no-wrap"><%= mainShareButtonSuffix %></span>
            </span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-6 pr-1 col-lg-3">
        <a href='<%= facebookShareURL %>' class="share-button-base share-button-facebook">
            <span class="no-wrap">
                <i class="fab fa-facebook-f"></i>
                Facebook
            </span>
        </a>
    </div>

    <div class="col-6 pl-1 col-lg-3 pr-lg-1">
        <a href='<%= pocketBookmarkURL %>'
           class="share-button-base share-button-pocket">
            <span class="no-wrap">
                <i class="fab fa-get-pocket"></i>
                Pocket
            </span>
        </a>
    </div>

    <div class="col-6 pr-1 col-lg-3 pl-lg-1 pr-lg-1">
        <a href='<%= hatenaBookmarkURL %>'
           class="share-button-base share-button-hatena">
            <span class="no-wrap">
                <i class="fas fa-bold">!</i>
                Hatena
            </span>
        </a>
    </div>

    <div class="col-6 pl-1 col-lg-3">
        <a href='<%= twitterShareURL %>' class="share-button-base share-button-twitter">
            <span class="no-wrap">
                <i class="fab fa-twitter"></i>
                Twitter
            </span>
        </a>
    </div>
</div>

