<div class="row">
    <div class="col-4 product-col">
        <div class="product-info-block">

            <div class="row">
                <div class="col-12">
                    <a href="/product/detail/<%= productData.productModel.productId %>" target="_blank">
                        <img src="/img/blank.png" data-src="<%= productData.productModel.imageUrlBase %>"
                             class="img-fluid book-img lazyload">
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-12 mx-auto">
                    <div class="buy-link-area mx-auto">
                        <span class="buy-link-area-title">購入</span>
                        <button type="button" class="btn af-link-button">
                            <a href="<%= productData.productModel.affiliateItemUrl %>" target="_blank"
                               rel="nofollow">
                                <img src="/img/rakuten_logo.png" class="img-fluid af-link-rakuten-logo">
                            </a>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-8">
        <%- include(appRoot + '/views/compact_tweet_list.ejs', { productData: productData, }) %>
    </div>
</div>
